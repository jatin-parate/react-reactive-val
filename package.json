{
  "name": "react-reactive-val",
  "version": "1.0.5",
  "description": "A lightweight, type-safe reactive value management library for React applications",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "umd": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:webpack": "webpack --config webpack.config.js",
    "build": "rm -rf dist && npm run build:types && npm run build:webpack",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jatin-parate/react-reactive-val.git"
  },
  "keywords": [
    "react",
    "reactive",
    "state",
    "management",
    "typescript",
    "hooks"
  ],
  "author": "Jatin Parate <jatin4228@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jatin-parate/react-reactive-val/issues"
  },
  "homepage": "https://github.com/jatin-parate/react-reactive-val#readme",
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/react": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "terser-webpack-plugin": "^5.3.10",
    "typescript": "^5.8.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
